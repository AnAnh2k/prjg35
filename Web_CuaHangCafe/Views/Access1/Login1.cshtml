@model Web_CuaHangCafe.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-header text-center">
                <h4 class="mb-0">Đăng nhập</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login1" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="TenTaiKhoan" class="form-label"></label>
                        <input asp-for="TenTaiKhoan" class="form-control" />
                        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label"></label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </form>
                <div class="mt-3 text-center">
                    <span>Bạn chưa có tài khoản?</span>
                    <a asp-action="Register" asp-controller="Access1">Đăng ký ngay!</a>
                </div>
            </div>
        </div>
    </div>
</div>


