@{
    // Lấy thông tin đăng nhập từ session
    var tenTaiKhoan = Context.Session.GetString("TenTaiKhoan");
    var role = Context.Session.GetString("Role");
}
<header class="header fixed-top" id="header-navbar">
    <div class="container-fluid">
        <div class="row">
            <!-- Logo -->
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a asp-controller="home" asp-action="index">
                        <i class="fas fa-coffee"></i>
                        The Space Coffee
                    </a>
                </div>
            </div>

            <!-- Menu chính -->
            <div class="col-xl-5 col-lg-6">
                <nav class="header__menu">
                    <ul>
                        <li class="@((string)ViewData["Home"])"><a asp-controller="home" asp-action="index">Trang chủ</a></li>
                        <li class="@((string)ViewData["Products"])"><a asp-controller="products" asp-action="index">Sản phẩm</a></li>
                        <li class="@((string)ViewData["News"])"><a asp-controller="news" asp-action="index">Tin tức</a></li>
                        <li class="@((string)ViewData["About"])"><a asp-controller="about" asp-action="index">Giới thiệu</a></li>
                    </ul>
                </nav>
            </div>

            <!-- Phần bên phải header: Tìm kiếm, Đăng nhập/Đăng ký hoặc Dropdown -->
            <div class="col-lg-4">
                <div class="header__right">
                    <ul class="header__right__widget">
                        <li>
                            <span class="search-switch" title="Tìm kiếm">
                                <i class="fas fa-search"></i>
                            </span>
                        </li>
                        @if (string.IsNullOrEmpty(tenTaiKhoan))
                        {
                            <!-- Nếu chưa đăng nhập: Hiển thị Đăng nhập và Đăng ký -->
                            <li class="nav-item">
                                <a asp-controller="Access1" asp-action="Login1" class="small ">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Access1" asp-action="Register" class="small ">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Nếu đã đăng nhập: Hiển thị menu dropdown -->
                            <li class="nav-item dropdown user-menu">
                                <a class="nav-link dropdown-toggle small" href="#" id="dropdownMenuLink" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @tenTaiKhoan
                                </a>
                                <div class="dropdown-menu " aria-labelledby="dropdownMenuLink" style="z-index: 1050;">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="ThongTin">Thông tin đăng nhập</a>

                                    @if (role == "Admin")
                                    {
                                        <a class="dropdown-item" asp-controller="HomeAdmin" asp-action="Index">
                                            Quản lý (Admin)
                                        </a>
                                    }
                                    @if (role == "Employee")
                                    {
                                        <a class="dropdown-item" asp-controller="HomeAdmin" asp-action="Index">
                                            Quản lý (Employee)
                                            </a>
                                    }
                                    @if (role == "User")
                                    {
                                        <a class="dropdown-item" asp-controller="HoaDon" asp-action="Index">
                                            Hóa đơn đơn hàng
                                        </a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Access1" asp-action="Logout">
                                        Đăng xuất
                                    </a>
                                </div>
                            </li>
                        }
                        <li>
                            @await Component.InvokeAsync("ShoppingCartSummary")
                        </li>
                    </ul>
                </div>
            </div>
        </div>  

        <!-- Nút mở sidebar hoặc menu mobile -->
        <div class="canvas__open">
            <i class="fas fa-bars"></i>
        </div>
    </div>
</header>
<div class="header__behind"></div>
