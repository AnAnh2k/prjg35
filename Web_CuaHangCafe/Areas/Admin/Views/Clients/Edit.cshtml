@model Web_CuaHangCafe.Models.TbKhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sửa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-3">
    <h3 class="page-title">
        Sửa khách hàng: <span class="text-muted">@ViewBag.name</span>
    </h3>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKhachHang" />
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label">Họ và tên</label>
                <input asp-for="TenKhachHang" class="form-control"  />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SdtkhachHang" class="control-label">Số điện thoại</label>
                <input asp-for="SdtkhachHang" class="form-control" />
                <span asp-validation-for="SdtkhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay về</a>
            </div>
        </form>
    </div>
</div>
