@model Web_CuaHangCafe.Models.TbNguyenLieu
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa nguyên liệu";
}

<h1>Chỉnh sửa nguyên liệu</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MaNguyenLieu" />
    <div class="form-group">
        <label asp-for="TenNguyenLieu"></label>
        <input asp-for="TenNguyenLieu" class="form-control" />
        <span asp-validation-for="TenNguyenLieu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonViTinh"></label>
        <input asp-for="DonViTinh" class="form-control" />
        <span asp-validation-for="DonViTinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HanSuDung"></label>
        <input asp-for="HanSuDung" class="form-control" type="date" />
        <span asp-validation-for="HanSuDung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonGia"></label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuongToiThieu"></label>
        <input asp-for="SoLuongToiThieu" class="form-control" />
        <span asp-validation-for="SoLuongToiThieu" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
