@model Web_CuaHangCafe.Areas.Admin.ViewModels.EmployeeAccountViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa thông tin nhân viên & tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Chỉnh sửa thông tin nhân viên & tài khoản</h3>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Fieldset cho thông tin nhân viên -->
    <fieldset>
        <legend>Thông tin nhân viên</legend>

        <div class="form-group">
            <label asp-for="Employee.HoTen" class="control-label"></label>
            <input asp-for="Employee.HoTen" class="form-control" />
            <span asp-validation-for="Employee.HoTen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.DiaChi" class="control-label"></label>
            <input asp-for="Employee.DiaChi" class="form-control" />
            <span asp-validation-for="Employee.DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Email" class="control-label"></label>
            <input asp-for="Employee.Email" class="form-control" />
            <span asp-validation-for="Employee.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.NgaySinh" class="control-label"></label>
            <input asp-for="Employee.NgaySinh" class="form-control" type="date" />
            <span asp-validation-for="Employee.NgaySinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.GioiTinh" class="control-label"></label>
            <select asp-for="Employee.GioiTinh" class="form-control">
                <option value="">-- Chọn giới tính --</option>
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
            </select>
            <span asp-validation-for="Employee.GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.ChucVu" class="control-label"></label>
            <select asp-for="Employee.ChucVu" class="form-control">
                <option value="">-- Chọn chức vụ --</option>
                <option value="Quản lý">Quản lý</option>
                <option value="Nhân viên">Nhân viên</option>
            </select>
            <span asp-validation-for="Employee.ChucVu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Sdt" class="control-label"></label>
            <input asp-for="Employee.Sdt" class="form-control" />
            <span asp-validation-for="Employee.Sdt" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.SoCccd" class="control-label"></label>
            <input asp-for="Employee.SoCccd" class="form-control" />
            <span asp-validation-for="Employee.SoCccd" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.LuongCoBan" class="control-label"></label>
            <input asp-for="Employee.LuongCoBan" class="form-control" />
            <span asp-validation-for="Employee.LuongCoBan" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.HeSoLuong" class="control-label"></label>
            <input asp-for="Employee.HeSoLuong" class="form-control" />
            <span asp-validation-for="Employee.HeSoLuong" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.MaQuan" class="control-label"></label>
            <select asp-for="Employee.MaQuan" class="form-control" asp-items="ViewBag.MaQuan">
                <option value="">-- Chọn quán --</option>
            </select>
            <span asp-validation-for="Employee.MaQuan" class="text-danger"></span>
        </div>
    </fieldset>

    <!-- Fieldset cho thông tin tài khoản -->
    <fieldset>
        <legend>Thông tin tài khoản</legend>

        <div class="form-group">
            <label asp-for="Account.TenTaiKhoan" class="control-label"></label>
            <input asp-for="Account.TenTaiKhoan" class="form-control" />
            <span asp-validation-for="Account.TenTaiKhoan" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Account.MatKhau" class="control-label"></label>
            <input asp-for="Account.MatKhau" class="form-control" type="password" placeholder="Nhập mật khẩu mới nếu muốn đổi" />
            <span asp-validation-for="Account.MatKhau" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Account.MaQuyen" class="control-label"></label>
            <select asp-for="Account.MaQuyen" class="form-control" asp-items="ViewBag.MaQuyen">
                <option value="">-- Chọn quyền --</option>
            </select>
            <span asp-validation-for="Account.MaQuyen" class="text-danger"></span>
        </div>
    </fieldset>

    <!-- Truyền mã nhân viên (ID) ẩn để dùng khi submit -->
    <input type="hidden" asp-for="Employee.MaNhanVien" />

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
